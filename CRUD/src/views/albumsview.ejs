<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head') %>
  </head>

  <body>
      <%- include('partials/header') %>

    <h1 class="display-1 text-center"> Albums</h1>



<div class="container mt-5">

  <div class="row">

    <div class="col-md-7">

      <table class="table table-dark table-striped-columns">
        <thead>
          <tr>
            <th scope="col">ID:</th>
            <th scope="col">Album:</th>
            <th scope="col">Artista:</th>
            <th scope="col">Año:</th>
            <th scope="col">Opciones:</th>
          </tr>
        </thead>

          <tbody>

            <% if (data) { %>
              <% for (var i=0; i < data.length; i++) { %>
                <tr>
                  <th ><%= data[i].id   %></th>
                  <td><%= data[i].album  %> </td>
                  <td><%= data[i].artista   %> </td>
                  <td><%= data[i].anio  %></td>
                  <td>
                    <a href="#" class="btn btn-warning">Editar</a>
                    <a href="#"class="btn btn-danger">Borrar</a>
                  </td>
                </tr>
                <% } %>
            <% } %>

          </tbody>




      </table>




    </div>

    <div class="col-md-5">


      <div class="card">
        <div class="card-body">

          <form  action="/add" method="POST">

            <div class="mb-3">
              <input type="text" name="txtAlbum" class="form-control" placeholder="Escribe Album" value="">
            </div>

            <div class="mb-3">
              <input type="text" name="txtArtista" class="form-control" placeholder="Escribe Artista" value="">
            </div>

            <div class="mb-3">
              <input type="text" name="txtAnio"  class="form-control" placeholder="Escribe Año" value="">
            </div>

            <button type="submit" class="btn btn-secondary">Guardar Album</button>

          </form>

        </div>
      </div>


    </div>

  </div>

</div>



    <%- include('partials/footer') %>
  </body>

</html>
